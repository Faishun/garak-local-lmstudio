{
  "rest": {
    "RestGenerator": {
      "name": "PUT_YOUR_MODEL_ID",
      "uri": "http://localhost:8000/v1/chat/completions",
      "method": "post",
      "headers": {
        "Content-Type": "application/json"
      },

      "request_timeout": 120,

      "req_template_json_object": {
        "model": "PUT_YOUR_MODEL_ID",
        "messages": [
          {
            "role": "user",
            "content": "$INPUT"
          }
        ],
        "temperature": 0.7,
        "max_tokens": 512
      },

      "response_json": true,
      "response_json_field": "$.choices[0].message.content"
    }
  }
}
